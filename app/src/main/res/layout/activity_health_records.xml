<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/health_records"
    tools:context=".HealthRecords">

    <Button
        android:id="@+id/reportbutton"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:background="@drawable/roundbuttonhealth"
        android:fontFamily="@font/mochiy_pop_p_one"

        android:text="Report"
        android:textAllCaps="false"
        android:textSize="22sp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vhbutton"
        app:layout_constraintVertical_bias="0.936"
        app:rippleColor="@android:color/transparent" />

    <ImageButton
        android:id="@+id/backButton1"
        android:layout_width="53dp"
        android:layout_height="53dp"
        android:background="@android:color/transparent"
        android:src="@drawable/icons8_back_30"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.016"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <Button
        android:id="@+id/vhbutton"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:background="@drawable/roundbuttonhealth"
        android:fontFamily="@font/mochiy_pop_p_one"
        android:text="Vaccination History"

        android:textAllCaps="false"
        android:textSize="22sp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.556"
        app:rippleColor="@android:color/transparent" />

    <Button
        android:id="@+id/medbutton"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:background="@drawable/roundbuttonhealth"

        android:fontFamily="@font/mochiy_pop_p_one"
        android:text="Medications"
        android:textAllCaps="false"
        android:textSize="22sp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toTopOf="@+id/appointbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vhbutton"
        app:rippleColor="@android:color/transparent" />

    <Button
        android:id="@+id/appointbutton"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:background="@drawable/roundbuttonhealth"
        android:fontFamily="@font/mochiy_pop_p_one"
        android:text="Apponintments"

        android:textAllCaps="false"
        android:textSize="22sp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toTopOf="@+id/reportbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vhbutton"
        app:layout_constraintVertical_bias="0.78"
        app:rippleColor="@android:color/transparent" />

</androidx.constraintlayout.widget.ConstraintLayout>