<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FAFAFA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal"
        android:divider="?android:attr/dividerVertical"
        android:showDividers="middle"
        android:dividerPadding="8dp">

        <!-- Profile Picture -->

        <ImageView
            android:id="@+id/profile_picture"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"
            android:background="@drawable/circle_background"
            android:clickable="true"
            android:focusable="true"
            android:padding="4dp"
            android:scaleType="centerCrop"
            android:src="@drawable/pfp" />

        <!-- Pet Name -->
        <EditText
            android:id="@+id/etPetName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pet Name"
            android:background="@drawable/round_pfp"
            android:padding="16dp"
            android:textSize="16sp" />

        <!-- Breed Spinner -->
        <Spinner
            android:id="@+id/spinnerBreed"
            android:layout_width="362dp"
            android:layout_height="59dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/round_pfp"
            android:backgroundTint="@null"
            android:backgroundTintMode="@null"
            android:entries="@array/breeds_array"
            android:padding="12dp" />

        <!-- Owner Name -->
        <EditText
            android:id="@+id/etOwnerName"
            android:layout_width="359dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/round_pfp"
            android:hint="Owner Name"
            android:padding="16dp"
            android:textSize="16sp" />

        <!-- Weight -->
        <EditText
            android:id="@+id/etWeight"
            android:layout_width="364dp"
            android:layout_height="68dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/round_pfp"
            android:hint="Weight (kg)"
            android:inputType="numberDecimal"
            android:padding="16dp"
            android:textSize="16sp" />

        <!-- Medical Condition -->
        <EditText
            android:id="@+id/etMedicalCondition"
            android:layout_width="350dp"
            android:layout_height="65dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/round_pfp"
            android:hint="Medical Condition"
            android:padding="16dp"
            android:textSize="16sp" />

        <!-- Medication -->
        <EditText
            android:id="@+id/etMedication"
            android:layout_width="355dp"
            android:layout_height="68dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/round_pfp"
            android:hint="Medication"
            android:padding="16dp"
            android:textSize="16sp" />

        <!-- Allergies Spinner -->
        <Spinner
            android:id="@+id/spinnerAllergies"
            android:layout_width="355dp"
            android:layout_height="59dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/round_pfp"
            android:entries="@array/allergies_array"
            android:padding="12dp" />

        <!-- Vaccination Status Spinner -->
        <Spinner
            android:id="@+id/spinnerVaccination"
            android:layout_width="362dp"
            android:layout_height="63dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/round_pfp"
            android:entries="@array/vaccination_status_array"
            android:padding="12dp" />

        <!-- Save Button -->
        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_button"
            android:text="Save Profile"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:backgroundTint="@null" />

    </LinearLayout>
</ScrollView>
